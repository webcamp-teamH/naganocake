<div class="container">
  <div class="row pt-5">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    <h4>新規会員登録</h4>
    <table>
      <tr>
        <td>名前</td>
        <td><%= f.label :name, "(姓)" %></td>
        <td><%= f.text_field :first_name, placeholder: "令和", autocomplete: "first_name" %></td>
        <td><%= f.label :name, "(名)" %></td>
        <td><%= f.text_field :last_name, placeholder: "道子", autocomplete: "last_name" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.label :name, "(セイ)" %></td>
        <td><%= f.text_field :first_name_kana, placeholder: "レイワ", autocomplete: "first_name_kana" %></td>
        <td><%= f.label :name, "(メイ)" %></td>
        <td><%= f.text_field :last_name_kana, placeholder: "ミチコ", autocomplete: "last_name_kana" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td></td>
        <td><%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :postcode, placeholder: "0000000", autocomplete: "postcode" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td></td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "adderss" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>電話番号(ハイフンなし)</td>
        <td></td>
        <td><%= f.text_field :phone_namber, placeholder: "00000000000", autocomplete: "phone_namber" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>パスワード(確認用)</td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    <table>
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
        <% end %>
      </div>

      <h4>既に登録済みの方</h4>
      <p><%= render "public/shared/links" %>からログインしてください。</p>
    </table>
  </div>
</div>
