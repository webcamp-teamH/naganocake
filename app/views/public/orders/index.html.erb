<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="mt-4 mb-4">
        <i class="far fa-edit"></i>
        注文履歴一覧
      </h2>

      <div class="row">
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                〒<%= order.postcode %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %>
                <% end %>
              </td>
              <td><%= order.grand_total %>円</td>
              <td><%= order.order_status_i18n %></td>
              <td>
                <%= link_to order_path(order.id) do %>
                  <p class="btn btn-primary">表示する</p>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

