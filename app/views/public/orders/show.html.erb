<div class ="container">
    <h5>注文履歴詳細画面</h5>

  <div class ="row">
    <div class ="col-xs-8">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
              <td>
                <%= @order.created_at.strftime("%Y/%m/%d") %>
              </td>
            <th>配送先</th>
              <td>
                〒<%= @order.postcode %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            <th>支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            <th>ステータス</th>
              <td><%= @order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

      <div class ="col-xs-3">
        <h5>請求情報</h5>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>商品合計</th>
                <td><%= (@order.grand_total - @order.shipping_cost) %></td>
              <th>配送料</th>
                <td><%= @order.shipping_cost %></td>
              <th>ご請求額</th>
                <td><%= @order.grand_total %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class ="col-xs-7">
        <h5>注文内容</h5>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>

          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= (order_detail.item.with_tax_price)*(order_detail.quantity) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>