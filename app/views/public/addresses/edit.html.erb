<div class="container">
<h4 class="m-4"><span style="background-color:#eeeeee">配送先編集</span></h4>
</div>

<div class="container">
  <div class="row">
    <div class="col-10">
      <table class=" table table-borderless">
        <tbody>
        <!--配送先登録-->
        <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
          <tr>
            <td class="col-3">
              <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
            </td>
            <td class="col-5">  
            <%= f.text_field :postcode, placeholder: "0000000" %>
            </td>
          </tr>
          <tr>
            <td>
            <%= f.label :address, "住所" %>
            <td> 
            <%= f.text_field :address, :size=>"60", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </td>
          </tr>
          <tr>
            <td>
            <%= f.label :name, "宛名" %>
            </td>
            <td>
            <%= f.text_field :name, placeholder: "山田太郎" %>
            </td>
            <td class="col-md3">
            <%= f.submit "変更内容を保存", class:"btn btn-success" %>
            </td>
            <% end %>            
          </tr>  
        </tbody>
      </table>    
    </div>
  </div>
</div>