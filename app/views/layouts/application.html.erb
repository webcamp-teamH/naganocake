<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <a class = "navbar-brand" href ="/">
            <span>LOGO</span>
          </a>

          <div class ="collapse navbar-collapse" id ="navbarNavDropdown">
            <ul class ="navbar-nav ml-auto">
              <% if admin_signed_in? %>
      <!--ログイン時に表示-->
              <li>
                <%= link_to '/admin/items', class: "nav-link text-light" do %>商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to '/admin/customers', class: "nav-link text-light" do %>会員一覧
                <% end %>
              </li>
              <li>
                <%= link_to '/admin', class: 'nav-link text-light' do %>注文履歴一覧
                <% end %>
              </li>
              <li>
                <%= link_to '/admin/genres', class: 'nav-link text-light' do %>ジャンル一覧
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do  %>ログアウト
                <% end %>
              </li>

            <% else %>

　　　<!--ログアウト時に表示-->
              <li>
                <%= link_to '/about', class: "nav-link text-light" do %>About
                <% end %>
              </li>
              <li>
                <%= link_to '/items', class: "nav-link text-light" do %>商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path, class: "nav-link text-light" do %>新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_session_path, class: "nav-link text-light" do %>ログイン
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <main>
      <%= yield %>
    </main>

    <footer>
      <div class ="container mt-5">
        <div class ="row">
          <div class ="mx-auto">
            <p>Nagano Cake</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
