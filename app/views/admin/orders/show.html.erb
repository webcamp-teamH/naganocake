<h3>注文履歴詳細</h3>
    <table>
      <tr>
        <th>購入者</th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
      <th>配送先</th>
        <td>〒<%= @order.postcode %>　<%= @order.address %><br>
            <%= @order.name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= Order.payment_methods_i18n[@order.payment_method] %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>< <%= form_with  model: @order, url: admin_order_path do |f| %>
            <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false} %>
            <%= f.submit "更新" %>
            <% end %></td>
      </tr>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td></td>
            <td><%= order_item.quantity%></td>
            <td></td>
            <td>
              <%= form_with  model: order_item, url: admin_order_item_path(order_item.id), local: true do |f| %>
              <%= f.select :production_status, OrderItem.production_statuses_i18n.invert, {prompt: false} %>
              <%= f.submit "更新" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <table >
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td></td>
      </tr>
    </table>