<h3>注文詳細画面(ステータス編集を兼ねる)</h3>
    <table>
      <tr>
        <th>購入者</th>
        <td><%= .name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><!--購入日.strftime('%Y/%m/%d')--></td>
      </tr>
      <tr>
      <th>配送先</th>
        <td><%= .postcode %><%= .address %><br>
            <%= .name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= .payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><!--form_with model do?-->
            <!--ステータスの選択-->
            <%= f.submit "更新" %>
            <!--end--></td>
      </tr>
    </table>

    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <!--each do-->
          <tr>
            <td><%= .item.name %></td>
            <td><!--<%= %>--></td>
            <td><%= .quantity %></td>
            <td><!--<%= %> --></td>
            <td>
              <!--form_with model?-->
              <!--ステータスの選択-->
              <%= f.submit "更新" %>
              <!--end-->
            </td>
          </tr>
        <!--end-->
      </tbody>
    </table>

    <table >
      <tr>
        <th>商品合計</th>
        <td><!--<%= %>--></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= .shipping_cost %></td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><!--<%= %>--></td>
      </tr>
    </table>