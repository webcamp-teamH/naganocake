<div class="container">
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row pt-4 pb-4">
      <div class="col-2 text-left ">
      <%= f.label :name, "ジャンル名" %>
      </div>
    </div>
    <div class="col-3">
      <%= f.text_field :name, class:'form-control' %>
    </div>
    <br>
    <div　class="col-2">
      <td><%= f.submit '新規登録', class: 'btn btn-success'%></td>
    </div>
  <% end %>
</div>