<div class="container">
  <div class="row pt-5">
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <h4>商品新規登録</h4>

    <!--バリデーションエラー文-->
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <table>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name,placeholder: "商品名" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction,placeholder: "ここに説明を記述します" %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,placeholder: "1000" %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
        　<%= f.radio_button :is_active, true %>
        　<%= f.label :is_active, "販売中" %>
        　<%= f.radio_button :is_active, false %>
        　<%= f.label :is_active, "販売停止中" %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit '投稿', class: 'btn btn-success' %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>



