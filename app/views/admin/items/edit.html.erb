<h1>商品編集画面</h1>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

    <table>
      <tr>
        <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name,placeholder: "商品名" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction,placeholder: "ここに説明を記述します" %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,placeholder: "1000" %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", {style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", {style: "display: inline-block;"} %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
      </tr>
    </table>

<% end %>


