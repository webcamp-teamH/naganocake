<div class="container">
  <h1>商品一覧</h1>
  <div class="row">

    <h5></h5>
    <div>
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-outline-dark rounded-circle p-0" style="width:3rem;height:3rem;">＋</button>
      <% end %>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税込価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <div class="font-weight-bold">
                <% if item.is_active == true %>
                  <p class="text text-success">販売中</p>
                <% else %>
                  <p class="text text-secondary">販売停止中</p>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>


<h5>商品名のリンク色を黒、下線有りに変える</h5>
