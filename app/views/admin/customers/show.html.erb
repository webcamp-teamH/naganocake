<h3>顧客詳細画面</h3>
    <table>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th>氏名</th>
        <th><%= @customer.last_name %><%= @customer.first_name %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
        <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.postcode %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.phone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% if @customer.is_closed == true %>
            <p>有効</p>
          <% else %>
            <p>退会</p>
          <% end %>
        </th>
      </tr>
      <tr>
        <td>
          <%= link_to "編集する",edit_admin_customer_path(@customer) %>
          <%= link_to "注文履歴一覧を見る", admin_path %>
        </td>
      </tr>
    </table>